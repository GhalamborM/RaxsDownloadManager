<Window x:Class="RD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loc="clr-namespace:RD.Localization"
        xmlns:local="clr-namespace:RD"
        xmlns:converters="clr-namespace:RD.Converters"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="{loc:Localize App.Title}" Height="500" Width="1000"
        WindowStartupLocation="CenterScreen"
        ui:WindowHelper.UseModernWindowStyle="True">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:BytesToStringConverter x:Key="BytesToStringConverter"/>
        <converters:StatusToVisibilityConverter x:Key="StatusToVisibilityConverter"/>
        <converters:CategoryPanelIconConverter x:Key="CategoryPanelIconConverter"/>
        <converters:CategoryPanelTooltipConverter x:Key="CategoryPanelTooltipConverter"/>
        
        <!-- Mica-like background -->
        <LinearGradientBrush x:Key="MicaBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F3F3F3" Offset="0"/>
            <GradientStop Color="#F0F0F0" Offset="0.5"/>
            <GradientStop Color="#EEEEEE" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Modern CommandBar Style -->
        <Style x:Key="ModernCommandBarStyle" TargetType="ui:CommandBar">
            <Setter Property="Background" Value="#00FFFFFF"/>
            <Setter Property="Padding" Value="16,8"/>
        </Style>
        
        <!-- TreeView Style -->
        <Style x:Key="CategoryTreeViewStyle" TargetType="TreeView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
        
        <HierarchicalDataTemplate x:Key="CategoryTreeTemplate" ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding Name}" 
                       FontSize="13"
                       Padding="4,2"/>
        </HierarchicalDataTemplate>
        
    </Window.Resources>
    
    <Grid Background="{StaticResource MicaBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Modern Command Bar -->
        <ui:CommandBar Grid.Row="0" Style="{StaticResource ModernCommandBarStyle}">
            <ui:AppBarButton Icon="Add" Label="{loc:Localize MainWindow.AddDownload}" Command="{Binding ShowAddDownloadCommand}"/>
            <ui:AppBarSeparator/>
            <ui:AppBarButton Icon="Play" Label="{loc:Localize General.Resume}" Command="{Binding ResumeDownloadCommand}"/>
            <ui:AppBarButton Icon="Pause" Label="{loc:Localize General.Pause}" Command="{Binding PauseDownloadCommand}"/>
            <ui:AppBarButton Icon="Refresh" Label="{loc:Localize General.Refresh}" Command="{Binding RestartDownloadCommand}"/>
            <ui:AppBarButton Icon="Delete" Label="{loc:Localize General.Remove}" Command="{Binding RemoveDownloadCommand}"/>
            <ui:AppBarSeparator/>
            <!--<ui:AppBarButton Icon="Calendar" Label="Task Scheduler" Command="{Binding ShowSchedulerCommand}"/>-->
            <ui:AppBarButton Icon="Setting" Label="{loc:Localize General.Options}" Command="{Binding ShowOptionsCommand}"/>
            <ui:AppBarSeparator/>
            <ui:AppBarButton Icon="Globe" Label="Check for Updates" Command="{Binding CheckForUpdatesCommand}"/>
        </ui:CommandBar>

        <!-- Main Content Grid with TreeView and Downloads -->
        <Grid Grid.Row="1" Margin="16,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Category TreeView Card -->
            <Border Grid.Column="0">
                <Border.Style>
                    <Style TargetType="Border" BasedOn="{StaticResource CardStyle}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsCategoryPanelCollapsed}" Value="True">
                                <Setter Property="Width" Value="48"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsCategoryPanelCollapsed}" Value="False">
                                <Setter Property="Width" Value="200"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Card Header -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource AccentColorBrush}" 
                            CornerRadius="6,6,0,0" 
                            Margin="-16,-16,-16,0" 
                            Padding="8,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="Categories" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="White"
                                       Visibility="{Binding IsCategoryPanelCollapsed, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                            
                            <Button Grid.Column="1"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="4"
                                    Cursor="Hand"
                                    Click="ToggleCategoryPanel_Click"
                                    ToolTip="{Binding IsCategoryPanelCollapsed, Converter={StaticResource CategoryPanelTooltipConverter}}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#33FFFFFF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Path Data="{Binding IsCategoryPanelCollapsed, Converter={StaticResource CategoryPanelIconConverter}}"
                                      Fill="White"
                                      Stretch="Uniform"
                                      Width="12"
                                      Height="12"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- TreeView -->
                    <TreeView Grid.Row="1" 
                              ItemsSource="{Binding CategoryTree}"
                              ItemTemplate="{StaticResource CategoryTreeTemplate}"
                              Style="{StaticResource CategoryTreeViewStyle}"
                              Margin="0,16,0,0"
                              Visibility="{Binding IsCategoryPanelCollapsed, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                                <EventSetter Event="Selected" Handler="TreeViewItem_Selected"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Downloads Card -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Card Header -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource AccentColorBrush}" 
                            CornerRadius="6,6,0,0" 
                            Margin="-16,-16,-16,0" 
                            Padding="16,12">
                        <TextBlock Text="Downloads" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="White"/>
                    </Border>

                    <!-- Downloads DataGrid -->
                    <DataGrid Grid.Row="1" 
                             ItemsSource="{Binding DownloadsView}"
                             SelectedItem="{Binding SelectedDownload}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"
                             IsReadOnly="True"
                             GridLinesVisibility="Horizontal"
                             HeadersVisibility="Column"
                             SelectionMode="Single"
                             AlternatingRowBackground="#F8F8F8"
                             Margin="0,16,0,0">
                        <DataGrid.InputBindings>
                            <MouseBinding Gesture="LeftDoubleClick" Command="{Binding OnDownloadItemDoubleClickCommand}"/>
                        </DataGrid.InputBindings>
                        
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <!--<MenuItem Header="Add URL to Task..." Command="{Binding AddUrlToTaskCommand}"/>-->
                                <Separator/>
                                <MenuItem Header="{loc:Localize General.Resume}" Command="{Binding ResumeDownloadCommand}"/>
                                <MenuItem Header="{loc:Localize General.Pause}" Command="{Binding PauseDownloadCommand}"/>
                                <MenuItem Header="{loc:Localize General.Restart}" Command="{Binding RestartDownloadCommand}"/>
                                <MenuItem Header="{loc:Localize General.Remove}" Command="{Binding RemoveDownloadCommand}"/>
                                <Separator/>
                                <MenuItem Header="{loc:Localize MainWindow.ShowDetails}" Command="{Binding ShowDownloadDetailsCommand}"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{loc:Localize General.FileName}" Binding="{Binding FileName}" Width="300"/>
                            <DataGridTextColumn Header="{loc:Localize General.Status}" Binding="{Binding StatusText}" Width="100"/>
                            <DataGridTemplateColumn Header="{loc:Localize General.Size}" Width="130">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid Margin="8,4">
                                            <ProgressBar Value="{Binding PercentageComplete, Mode=OneWay}" 
                                                     VerticalAlignment="Bottom"
                                                     Maximum="100" Margin="0 -3"
                                                         Visibility="{Binding Converter={StaticResource StatusToVisibilityConverter}}"/>
                                            <TextBlock 
                                                     HorizontalAlignment="Center" 
                                                     FontSize="11"
                                                     FontWeight="Medium"
                                                     VerticalAlignment="Center"
                                                     Foreground="{StaticResource SystemControlForegroundBaseHighBrush}">
                                                
                                                <Run Text="{Binding SizeText, Mode=OneWay}" />
                                                <LineBreak/>
                                                <Run Text="{Binding PercentageComplete, StringFormat={}{0:F1}%, Mode=OneWay,Converter={StaticResource StatusToVisibilityConverter}}"  />
                                            </TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="{loc:Localize General.Speed}" Binding="{Binding SpeedText, Mode=OneWay}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- Modern Status Bar -->
        <Border Grid.Row="2" 
                Background="{StaticResource SystemControlBackgroundBaseLowBrush}"
                BorderBrush="{StaticResource SystemControlBackgroundBaseMediumBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,8">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📥 " FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="{loc:Localize MainWindow.Downloads}" FontWeight="Medium"/>
                    <TextBlock Text="{Binding Downloads.Count, Mode=OneWay}" FontWeight="SemiBold" Margin="0,0,24,0"/>
                    
                    <TextBlock Text="🚀 " FontSize="16" Margin="0,0,8,0"/>
                    <TextBlock Text="{loc:Localize MainWindow.Active}" FontWeight="Medium"/>
                    <TextBlock Text="{Binding ActiveDownloadsCount, Mode=OneWay}" FontWeight="SemiBold"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ProgressBar Width="100" Height="4" IsIndeterminate="True" Margin="0,0,12,0" Style="{StaticResource FluentProgressBarStyle}"/>
                    <TextBlock Text="{loc:Localize MainWindow.Loading}" FontWeight="Medium" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
