<Window x:Class="RD.Views.AddDownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loc="clr-namespace:RD.Localization"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="{loc:Localize AddDownloadWindow.AddNewDownload}"
        Height="480" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ui:WindowHelper.UseModernWindowStyle="True">
    
    <Window.Resources>
        <!-- Mica-like background -->
        <LinearGradientBrush x:Key="MicaBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F3F3F3" Offset="0"/>
            <GradientStop Color="#F0F0F0" Offset="0.5"/>
            <GradientStop Color="#EEEEEE" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Grid  Background="{StaticResource MicaBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24 12">
                <!-- URL Section -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{loc:Localize AddDownloadWindow.DownloadUrl}" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,16"
                               Foreground="{StaticResource AccentColorBrush}"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="&#xE71B;" 
                                   FontSize="16" 
                                   VerticalAlignment="Center" 
                                   Style="{StaticResource MessageIconStyle}"
                                   Margin="0,0,12,0"/>
                            <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2">
                                <Label Content="{loc:Localize AddDownloadWindow.Url}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                <TextBox Text="{Binding Url}" 
                                     Style="{StaticResource FluentTextBoxStyle}"
                                     Margin="0,0,0,12"/>
                            </StackPanel>

                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="&#xEC51;" 
                                   FontSize="16" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,12,0"
                                   Style="{StaticResource MessageIconStyle}"/>
                            <StackPanel Grid.Row="1" Grid.Column="1">
                                <Label Content="{loc:Localize AddDownloadWindow.FileName}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                <TextBox Text="{Binding FileName}" 
                                     Style="{StaticResource FluentTextBoxStyle}"
                                     Margin="0,0,8,12"/>
                            </StackPanel>

                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="&#xE74E;" 
                                   FontSize="16" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,12,0"
                                   Style="{StaticResource MessageIconStyle}"/>
                            <StackPanel Grid.Row="2" Grid.Column="1">
                                <Label Content="{loc:Localize AddDownloadWindow.SaveTo}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                <TextBox Text="{Binding DownloadPath}" 
                                     Style="{StaticResource FluentTextBoxStyle}"
                                     Margin="0,0,8,0"/>
                            </StackPanel>
                            <Button Grid.Row="2" Grid.Column="2" 
                                Content="{loc:Localize General.Browse}" 
                                Style="{StaticResource FluentSecondaryButtonStyle}"
                                Command="{Binding BrowseDownloadPathCommand}"
                                VerticalAlignment="Bottom"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Download Options -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{loc:Localize AddDownloadWindow.DownloadOptions}" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,16"
                               Foreground="{StaticResource AccentColorBrush}"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,12">
                                <Label Content="{loc:Localize AddDownloadWindow.MaxSegments}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                <TextBox Text="{Binding MaxSegments}" Style="{StaticResource FluentTextBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,12">
                                <Label Content="{loc:Localize AddDownloadWindow.BufferSize}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                <TextBox Text="{Binding BufferSize}" Style="{StaticResource FluentTextBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,12">
                                <Label Content="{loc:Localize AddDownloadWindow.Timeout}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                <TextBox Text="{Binding TimeoutMinutes}" Style="{StaticResource FluentTextBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,12">
                                <Label Content="{loc:Localize AddDownloadWindow.RetryAttempts}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                <TextBox Text="{Binding RetryAttempts}" Style="{StaticResource FluentTextBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,8,12">
                                <Label Content="{loc:Localize AddDownloadWindow.RetryDelay}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                <TextBox Text="{Binding RetryDelaySeconds}" Style="{StaticResource FluentTextBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                                   Orientation="Horizontal" 
                                   Margin="0,8,0,0">
                                <CheckBox Content="OverwriteExistingFile" 
                                      IsChecked="{Binding OverwriteExisting}" 
                                      Margin="0,0,24,0"/>
                                <!--<CheckBox Content="Enable resume" 
                                      IsChecked="{Binding EnableResume}"/>-->
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Proxy Settings -->
                <Expander Header="{loc:Localize AddDownloadWindow.ProxySettings}" Margin="0,0,0,16">
                    <Border Style="{StaticResource CardStyle}" Margin="0,8,0,0">
                        <StackPanel>
                            <CheckBox Content="{loc:Localize AddDownloadWindow.UseProxy}" 
                                 IsChecked="{Binding UseProxy}" 
                                 Margin="0,0,0,16"/>

                            <Grid IsEnabled="{Binding UseProxy}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,12">
                                    <Label Content="{loc:Localize AddDownloadWindow.ProxyHost}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                    <TextBox Text="{Binding ProxyHost}" Style="{StaticResource FluentTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,12">
                                    <Label Content="{loc:Localize AddDownloadWindow.ProxyPort}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                    <TextBox Text="{Binding ProxyPort}" Style="{StaticResource FluentTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,0">
                                    <Label Content="{loc:Localize AddDownloadWindow.Username}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                    <TextBox Text="{Binding ProxyUsername}" Style="{StaticResource FluentTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,0">
                                    <Label Content="{loc:Localize AddDownloadWindow.Password}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                    <PasswordBox x:Name="ProxyPasswordBox" 
                                           Height="36" 
                                           Margin="4"
                                           Padding="12,8"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Expander>

                <!-- Authentication Settings -->
                <Expander Header="{loc:Localize AddDownloadWindow.Authentication}" Margin="0,0,0,24">
                    <Border Style="{StaticResource CardStyle}" Margin="0,8,0,0">
                        <StackPanel>
                            <CheckBox Content="{loc:Localize AddDownloadWindow.UseAuthentication}" 
                                 IsChecked="{Binding UseAuthentication}" 
                                 Margin="0,0,0,16"/>

                            <Grid IsEnabled="{Binding UseAuthentication}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Margin="0,0,0,12">
                                    <Label Content="{loc:Localize AddDownloadWindow.Type}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                    <ComboBox ItemsSource="{Binding AuthenticationTypes}" 
                                         SelectedItem="{Binding AuthenticationType}" 
                                         Height="36"
                                         Margin="4"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Margin="0,0,0,12">
                                    <Label Content="{loc:Localize AddDownloadWindow.Username}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                    <TextBox Text="{Binding AuthUsername}" Style="{StaticResource FluentTextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Margin="0,0,0,12">
                                    <Label Content="{loc:Localize AddDownloadWindow.Password}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                    <PasswordBox x:Name="AuthPasswordBox" 
                                           Height="36" 
                                           Margin="4"
                                           Padding="12,8"/>
                                </StackPanel>

                                <StackPanel Grid.Row="3">
                                    <Label Content="{loc:Localize AddDownloadWindow.TokenApiKey}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                    <TextBox Text="{Binding AuthToken}" Style="{StaticResource FluentTextBoxStyle}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Expander>

            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}"
                Padding="10">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{loc:Localize MainWindow.AddDownload}" 
                    Command="{Binding AddDownloadCommand}" 
                    Style="{StaticResource FluentButtonStyle}"/>
                <Button Content="{loc:Localize General.Cancel}" 
                    Command="{Binding CancelCommand}" 
                    Click="CancelButton_Click" 
                    Style="{StaticResource FluentSecondaryButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>