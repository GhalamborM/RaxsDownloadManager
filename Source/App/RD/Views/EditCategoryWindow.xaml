<Window x:Class="RD.Views.EditCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loc="clr-namespace:RD.Localization"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:viewmodels="clr-namespace:RD.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:EditCategoryViewModel}"
        mc:Ignorable="d"
        Title="{loc:Localize OptionsWindow.EditCategory}" 
        Height="550" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Window.Resources>
        <LinearGradientBrush x:Key="MicaBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F3F3F3" Offset="0"/>
            <GradientStop Color="#F0F0F0" Offset="0.5"/>
            <GradientStop Color="#EEEEEE" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Grid Background="{StaticResource MicaBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="24">
            <StackPanel>
                <!-- Category Details -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{loc:Localize OptionsWindow.CategoryDetails}" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,16"
                                   Foreground="{StaticResource AccentColorBrush}"/>

                        <StackPanel Margin="0,0,0,12">
                            <Label Content="{loc:Localize OptionsWindow.CategoryName}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                            <TextBox Text="{Binding CategoryName}" 
                                     Style="{StaticResource FluentTextBoxStyle}"
                                     IsReadOnly="{Binding IsDefaultCategory}"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,12">
                            <Label Content="{loc:Localize OptionsWindow.CategoryFolder}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                            <TextBox Text="{Binding FolderName}" 
                                     Style="{StaticResource FluentTextBoxStyle}"/>
                        </StackPanel>

                        <CheckBox Content="{loc:Localize OptionsWindow.CategoryEnabled}" 
                                  IsChecked="{Binding IsEnabled}" 
                                  Margin="0,0,0,8"/>
                    </StackPanel>
                </Border>

                <!-- Extensions Management -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="{loc:Localize OptionsWindow.ManageExtensions}" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,16"
                                   Foreground="{StaticResource AccentColorBrush}"/>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" 
                                     Text="{Binding NewExtension, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource FluentTextBoxStyle}"
                                     Margin="0,0,8,0">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Return" Command="{Binding AddExtensionCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                            
                            <Button Grid.Column="1" 
                                    Content="{loc:Localize OptionsWindow.AddExtension}" 
                                    Command="{Binding AddExtensionCommand}"
                                    Style="{StaticResource FluentButtonStyle}"
                                    Margin="0,0,8,0"/>
                            
                            <Button Grid.Column="2" 
                                    Content="{loc:Localize OptionsWindow.RemoveExtension}" 
                                    Command="{Binding RemoveExtensionCommand}"
                                    Style="{StaticResource FluentSecondaryButtonStyle}"/>
                        </Grid>

                        <ListBox ItemsSource="{Binding Extensions}"
                                 SelectedItem="{Binding SelectedExtension}"
                                 Height="200"
                                 Margin="0,0,0,8">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Margin="4"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <TextBlock Text="{loc:Localize OptionsWindow.ExtensionHint}" 
                                   TextWrapping="Wrap"
                                   Foreground="Gray"
                                   FontSize="12"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{loc:Localize General.Save}" 
                        Command="{Binding SaveCommand}" 
                        Style="{StaticResource FluentButtonStyle}"/>
                <Button Content="{loc:Localize General.Cancel}" 
                        Command="{Binding CancelCommand}" 
                        Style="{StaticResource FluentSecondaryButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
