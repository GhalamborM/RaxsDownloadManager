<Window x:Class="RD.Views.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loc="clr-namespace:RD.Localization"
        xmlns:ui="http://schemas.modernwpf.com/2019" 
        xmlns:converters="clr-namespace:RD.Converters"
        xmlns:viewmodels="clr-namespace:RD.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:OptionsViewModel}"
        mc:Ignorable="d"
        Title="{loc:Localize OptionsWindow.Options}" Height="700" Width="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        ui:WindowHelper.UseModernWindowStyle="True">
    
    <Window.Resources>
        <!-- Mica-like background -->
        <LinearGradientBrush x:Key="MicaBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F3F3F3" Offset="0"/>
            <GradientStop Color="#F0F0F0" Offset="0.5"/>
            <GradientStop Color="#EEEEEE" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Converters -->
        <converters:ExtensionsToStringConverter x:Key="ExtensionsToStringConverter"/>
    </Window.Resources>

    <Grid  Background="{StaticResource MicaBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="24">
                <!-- General Settings -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{loc:Localize OptionsWindow.GeneralSettings}" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,16"
                               Foreground="{StaticResource AccentColorBrush}"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,12">
                                <Label Content="{loc:Localize OptionsWindow.MaxConcurrentDownloads}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                <TextBox Text="{Binding MaxConcurrentDownloads}" 
                                     Style="{StaticResource FluentTextBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,0">
                                <Label Content="{loc:Localize OptionsWindow.DefaultDownloadDirectory}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                <TextBox Text="{Binding DefaultDownloadDirectory}" 
                                     Style="{StaticResource FluentTextBoxStyle}"/>
                            </StackPanel>

                            <Button Grid.Row="1" Grid.Column="1"
                                Content="{loc:Localize General.Browse}" 
                                Style="{StaticResource FluentSecondaryButtonStyle}"
                                Command="{Binding BrowseDownloadDirectoryCommand}"
                                VerticalAlignment="Bottom"/>
                            
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,8,12">
                                <Label Content="{loc:Localize OptionsWindow.TempDirectory}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                <TextBox Text="{Binding TempDirectory}" 
                                     Style="{StaticResource FluentTextBoxStyle}"/>
                            </StackPanel>

                            <Button Grid.Row="2" Grid.Column="1"
                                Content="{loc:Localize General.Browse}" 
                                Style="{StaticResource FluentSecondaryButtonStyle}"
                                Command="{Binding BrowseTempDirectoryCommand}"
                                VerticalAlignment="Bottom"/>
                            
                            <CheckBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                      Content="{loc:Localize OptionsWindow.RunAtStartup}" 
                                      IsChecked="{Binding RunAtStartup}" 
                                      Margin="0,8,0,8"
                                      FontWeight="SemiBold"/>
                        
                            <CheckBox Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                      Content="{loc:Localize OptionsWindow.MonitorClipboardForUrls}" 
                                      IsChecked="{Binding MonitorClipboardForUrls}" 
                                      Margin="0,0,0,8"
                                      FontWeight="SemiBold"/>
                        </Grid>
                        
                        <TextBlock Text="{loc:Localize OptionsWindow.ClipboardMonitoringDescription}" 
                                   TextWrapping="Wrap"
                                   Foreground="Gray"
                                   Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- File Categories -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{loc:Localize OptionsWindow.FileCategories}" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,8"
                               Foreground="{StaticResource AccentColorBrush}"/>
                        
                        <CheckBox Content="{loc:Localize OptionsWindow.UseCategorization}" 
                                  IsChecked="{Binding UseCategorization}" 
                                  Margin="0,0,0,8"
                                  FontWeight="SemiBold"/>
                        
                        <TextBlock Text="{loc:Localize OptionsWindow.CategoryDescription}" 
                                   TextWrapping="Wrap"
                                   Foreground="Gray"
                                   Margin="0,0,0,12"/>
                        
                        <DataGrid ItemsSource="{Binding FileCategories}"
                                  SelectedItem="{Binding SelectedCategory}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  Height="200"
                                  Margin="0,0,0,12">
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Header="{loc:Localize OptionsWindow.CategoryEnabled}" 
                                                        Binding="{Binding IsEnabled}" 
                                                        Width="80"/>
                                <DataGridTextColumn Header="{loc:Localize OptionsWindow.CategoryName}" 
                                                    Binding="{Binding Name}" 
                                                    Width="120"
                                                    IsReadOnly="True"/>
                                <DataGridTextColumn Header="{loc:Localize OptionsWindow.CategoryFolder}" 
                                                    Binding="{Binding FolderName}" 
                                                    Width="150"/>
                                <DataGridTextColumn Header="{loc:Localize OptionsWindow.CategoryExtensions}" 
                                                    Binding="{Binding Extensions, Converter={StaticResource ExtensionsToStringConverter}}" 
                                                    Width="*"
                                                    IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Button Content="{loc:Localize OptionsWindow.CreateCategory}" 
                                    Command="{Binding CreateCategoryCommand}" 
                                    Style="{StaticResource FluentButtonStyle}"
                                    Margin="0,0,8,0"/>
                            <Button Content="{loc:Localize OptionsWindow.EditCategory}" 
                                    Command="{Binding EditCategoryCommand}" 
                                    Style="{StaticResource FluentSecondaryButtonStyle}"
                                    Margin="0,0,8,0"/>
                            <Button Content="{loc:Localize OptionsWindow.DeleteCategory}" 
                                    Command="{Binding DeleteCategoryCommand}" 
                                    Style="{StaticResource FluentSecondaryButtonStyle}"
                                    Margin="0,0,8,0"/>
                        </StackPanel>
                        
                        <Button Content="{loc:Localize OptionsWindow.ResetCategoriesToDefaults}" 
                                Command="{Binding ResetCategoriesToDefaultsCommand}" 
                                Style="{StaticResource FluentSecondaryButtonStyle}"
                                HorizontalAlignment="Left"
                                Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Default Download Settings -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="{loc:Localize OptionsWindow.DefaultDownloadSettings}" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,16"
                               Foreground="{StaticResource AccentColorBrush}"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,12">
                                <Label Content="{loc:Localize AddDownloadWindow.MaxSegments}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                <TextBox Text="{Binding DefaultMaxSegments}" Style="{StaticResource FluentTextBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,12">
                                <Label Content="{loc:Localize AddDownloadWindow.BufferSize}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                <TextBox Text="{Binding DefaultBufferSize}" Style="{StaticResource FluentTextBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,8,12">
                                <Label Content="{loc:Localize AddDownloadWindow.Timeout}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                <TextBox Text="{Binding DefaultTimeoutMinutes}" Style="{StaticResource FluentTextBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="8,0,0,12">
                                <Label Content="{loc:Localize AddDownloadWindow.RetryAttempts}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                <TextBox Text="{Binding DefaultRetryAttempts}" Style="{StaticResource FluentTextBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,8,12">
                                <Label Content="{loc:Localize AddDownloadWindow.RetryDelay}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                <TextBox Text="{Binding DefaultRetryDelaySeconds}" Style="{StaticResource FluentTextBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="8,0,0,12">
                                <Label Content="{loc:Localize OptionsWindow.ProgressReport}" FontWeight="SemiBold" Padding="0,0,0,4"/>
                                <TextBox Text="{Binding ProgressReportIntervalMs}" Style="{StaticResource FluentTextBoxStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                                   Margin="0,8,0,0">
                                <CheckBox Content="{loc:Localize OptionsWindow.CleanupTempFilesOnSuccess}" 
                                      IsChecked="{Binding CleanupTempFilesOnSuccess}" 
                                      Margin="0,0,0,8"/>

                                <CheckBox Content="{loc:Localize OptionsWindow.CleanupTempFilesOnFailure}" 
                                      IsChecked="{Binding CleanupTempFilesOnFailure}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>


        <!-- Action Buttons -->
        <Border  Grid.Row="1" Style="{StaticResource CardStyle}"
                Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="{loc:Localize General.Save}" 
                        Command="{Binding SaveOptionsCommand}" 
                        Style="{StaticResource FluentButtonStyle}"/>
                <Button Content="{loc:Localize OptionsWindow.ResetToDefaults}" 
                        Command="{Binding ResetToDefaultsCommand}" 
                        Style="{StaticResource FluentSecondaryButtonStyle}"/>
                <Button Content="{loc:Localize General.Cancel}" 
                        Command="{Binding CancelCommand}" 
                        Click="CancelButton_Click" 
                        Style="{StaticResource FluentSecondaryButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>